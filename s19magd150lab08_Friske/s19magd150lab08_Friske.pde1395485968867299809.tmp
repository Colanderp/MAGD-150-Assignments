PFont title, credit;
PImage background;
String[] credits;

float creditsY;
float creditDif = 48;

void setup()
{
  background(0);
  size(660, 1020);
  background = loadImage("movieposter.png");
  title = createFont("Potra.ttf", 64);
  credit = createFont("SF Movie Poster Condensed.ttf", 48);
  creditsY = height - 256;
}

void LoadCredits()
{
  fill(255);
  textFont(credit);
  textAlign(CENTER);
  textSize(48);
  credits = loadStrings("credits.txt");
  for (int i = 0 ; i < credits.length; i++) {
    text(credits[i], 0, creditsY - (creditDif * (credits.length - i - 1)), width, 256);
  }
}

void draw()
{
  background(0);
  image(background, 0, 0, width, height);
  LoadCredits();
}
